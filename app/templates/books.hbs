 <h1>Authors</h1>

 <table class="table table-bordered table-striped">
   <thead>
     <tr>
       <th>Name</th>
       <th>Books</th>
     </tr>
   </thead>
   <tbody>
     {{#each model as |book|}}
       <tr>
         <td>{{book.title}}</td>
         <td>{{book.author.name}}</td>
       </tr>
     {{/each}}
   </tbody>
 </table>